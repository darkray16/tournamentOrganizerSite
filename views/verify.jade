extends layout

block content
  link(rel='stylesheet', href='/styles/verify.css')
  script(src='/scripts/controllers/verifyEvent.js', type='text/javascript')
  script(src='/scripts/services/sessionStore.js', type='text/javascript')
  h1= eventID
  form.verify-form(ng-controller='verifyEventController')
    .time.col-md-6
      .timer 1234
      .timer-description Alloted Time Per Round
    .format.col-md-6
      .format-name {{format}}
      .format-description Selected Format

    .col-md-12
      table.playerInfo.table.table-hover.table-condensed
        thead
          th Name
          th Notes
        tr.player-row(ng-repeat="player in playersList")
          td.player-name {{player.name}}
          td.player-notes {{player.notes}}
    input(type="submit", value="Start Event")